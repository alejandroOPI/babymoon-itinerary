    <section class="chapter" id="milan">
        <header class="chapter__header">
            <div class="chapter__counter">part four</div>
            <h2 class="chapter__title">
                <span>Milan</span>
            </h2>
            <p class="chapter__meta">January 17–22 · 5 nights</p>
